<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtChooseApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="21dp"
            android:text="@string/choose_one_of_the_apps"
            android:textColor="#202020"
            android:textSize="18sp"
            />
        <LinearLayout
            android:id="@+id/llGoogleFit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toBottomOf="@id/txtChooseApp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clGoogleFit"
                android:layout_width="120dp"
                android:layout_height="125dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtChooseApp"
                android:background="@drawable/grey_rounded_corner_bg"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgApp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_google_fit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/google_fit"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/imgApp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgGoogleFitSelected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:src="@drawable/blue_tick_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSamsungFit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="21dp"
            app:layout_constraintTop_toBottomOf="@id/txtChooseApp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSamsungHealth"
                android:layout_width="120dp"
                android:layout_height="125dp"
                app:layout_constraintTop_toBottomOf="@id/txtChooseApp"
                android:background="@drawable/grey_rounded_corner_bg"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgApp1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_samsun_health"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAppName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/samsung_h"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/imgApp1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgsamsungFitSelected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:src="@drawable/blue_tick_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMiFit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toBottomOf="@id/llGoogleFit">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMiFit"
                android:layout_width="120dp"
                android:layout_height="125dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clGoogleFit"
                android:background="@drawable/grey_rounded_corner_bg"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgApp2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_mi_fit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAppName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mi_fit"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/imgApp2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgMiFitSelected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/blue_tick_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llGarminC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="@{viewModel::onClick}"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="21dp"
            app:layout_constraintTop_toBottomOf="@id/llGoogleFit">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clGarminC"
                android:layout_width="120dp"
                android:layout_height="125dp"
                app:layout_constraintTop_toBottomOf="@id/llSamsungFit"
                android:background="@drawable/grey_rounded_corner_bg"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgApp3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_garmin_c"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAppName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/garmin_c"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/imgApp3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgGarminSelected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:src="@drawable/blue_tick_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                />

        </LinearLayout>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtConnect"
            android:layout_width="102dp"
            android:layout_height="30dp"
            android:text="@string/connect"
            style="@style/text_connect"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/llMiFit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="45dp"
            android:background="@drawable/rounded_blue_bg"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

