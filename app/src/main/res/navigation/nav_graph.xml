<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.techskaud.bmidieasestracker.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment"
        >
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/pop_enter"
            app:exitAnim="@anim/exit"
            />
        <action
            android:id="@+id/action_splashFragment_to_quiteTaskEditFragment"
            app:destination="@id/quiteTaskEditFragment" />

    </fragment>
    <fragment
        android:id="@+id/connectionsFragment"
        android:name="com.techskaud.bmidieasestracker.ui.fragment.ConnectionsFragment"
        android:label="ConnectionsFragment" >
        <action
            android:id="@+id/action_connectionsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.techskaud.bmidieasestracker.ui.fragment.onboarding_screen.OnBoardingFragment"
        android:label="OnBoardingFragment" >
        <action
            android:id="@+id/action_onBoardingFragment_to_connectionsFragment"
            app:destination="@id/connectionsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/pop_enter"
            app:exitAnim="@anim/exit"
            />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.techskaud.bmidieasestracker.ui.fragment.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/quiteTaskEditFragment"
        android:name="com.techskaud.bmidieasestracker.ui.fragment.time_tracker.QuiteTaskEditFragment"
        android:label="QuiteTaskEditFragment" />

</navigation>